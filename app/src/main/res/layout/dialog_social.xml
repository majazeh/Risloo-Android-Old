<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_social"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_18sdp"
    android:layout_marginRight="@dimen/_18sdp"
    android:layout_gravity="center"
    android:background="@drawable/draw_16sdp_top_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_18sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="right"
            android:text="@string/MoreFollowDialogTitle"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/Nero"
            android:textAlignment="gravity" />

        <LinearLayout
            android:id="@+id/dialog_social_telegram_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:src="@drawable/soc_telegram" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/MoreFollowDialogTelegram"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:textColor="@color/Grey"
                android:textAlignment="gravity"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_social_instagram_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:src="@drawable/soc_instgram" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/MoreFollowDialogInstagram"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:textColor="@color/Grey"
                android:textAlignment="gravity"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_social_facebook_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:src="@drawable/soc_facebook" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/MoreFollowDialogFacebook"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:textColor="@color/Grey"
                android:textAlignment="gravity"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_social_twitter_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layoutDirection="rtl"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:src="@drawable/soc_twitter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/MoreFollowDialogTwitter"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:textColor="@color/Grey"
                android:textAlignment="gravity"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_social_close_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/MoreFollowDialogClose"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/Mischka"
            android:textAlignment="gravity" />

    </LinearLayout>

</FrameLayout>