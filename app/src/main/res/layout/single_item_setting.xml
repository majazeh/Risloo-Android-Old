<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Views.Activities.AccountActivity"
    tools:ignore="UnusedAttribute, ContentDescription, RtlHardcoded">

    <ImageView
        android:id="@+id/single_item_setting_avatar_imageView"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_16sdp"
        android:elevation="@dimen/_1sdp"
        android:padding="@dimen/_8sdp"
        app:tint="@color/White" />

    <TextView
        android:id="@+id/single_item_setting_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/single_item_setting_avatar_imageView"
        android:layout_toRightOf="@id/single_item_setting_update_textView"
        android:gravity="right"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity"/>

    <TextView
        android:id="@+id/single_item_setting_update_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:visibility="invisible"
        android:text="@string/SettingNew"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textAlignment="gravity"
        android:background="@drawable/draw_16sdp_solid_primary"/>

    <View
        android:id="@+id/single_item_setting_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/single_item_setting_avatar_imageView"
        android:background="@color/Solitude" />

</RelativeLayout>