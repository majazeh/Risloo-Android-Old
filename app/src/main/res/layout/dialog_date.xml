<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_18sdp"
    android:layout_marginRight="@dimen/_18sdp"
    android:layout_gravity="center"
    android:background="@drawable/draw_16sdp_solid_snow"
    tools:ignore="UnusedAttribute, RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_18sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="right"
            android:text="@string/EditAccountDateDialogTitle"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/Nero"
            android:textAlignment="gravity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="horizontal"
            android:layoutDirection="ltr">

            <com.majazeh.risloo.Utils.CustomPicker
                android:id="@+id/dialog_date_year_NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:selectionDividerHeight="@dimen/_1sdp"
                android:theme="@style/NumberPickerTheme"/>

            <com.majazeh.risloo.Utils.CustomPicker
                android:id="@+id/dialog_date_month_NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:selectionDividerHeight="@dimen/_1sdp"
                android:theme="@style/NumberPickerTheme"/>

            <com.majazeh.risloo.Utils.CustomPicker
                android:id="@+id/dialog_date_day_NumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:selectionDividerHeight="@dimen/_1sdp"
                android:theme="@style/NumberPickerTheme"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_date_positive_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/EditAccountDateDialogPositive"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/dialog_date_negative_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/EditAccountDateDialogNegative"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>