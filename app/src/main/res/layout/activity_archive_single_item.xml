<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_archive_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/activity_archive_single_item_root_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:layoutDirection="rtl"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/Snow"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ArchiveSerial"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/activity_archive_single_item_serial_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:textAlignment="gravity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ArchiveDate"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/activity_archive_single_item_date_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:textColor="@color/Grey"
                android:textAlignment="gravity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ArchiveStatus"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/activity_archive_single_item_status_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:textAlignment="gravity" />

        </LinearLayout>

        <ImageView
            android:id="@+id/activity_archive_single_item_avatar_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/_6sdp"
            android:tint="@color/Grey" />

    </LinearLayout>

</androidx.cardview.widget.CardView>