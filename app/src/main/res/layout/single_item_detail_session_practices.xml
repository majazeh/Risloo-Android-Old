<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_detail_session_practices"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/single_item_detail_session_practices_id_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_session_practices_title_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_session_practices_content_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_session_practices_note_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|left">

        <TextView
            android:id="@+id/single_item_detail_session_practices_attachment_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_9sdp"
            android:gravity="center"
            android:text="@string/DetailSessionPracticeAttachmentDownload"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryDark"
            android:textAlignment="gravity"
            android:background="@drawable/draw_8sdp_solid_snow_border_quartz"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|left">

        <TextView
            android:id="@+id/single_item_detail_session_practices_homework_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_9sdp"
            android:gravity="center"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryDark"
            android:textAlignment="gravity"
            android:background="@drawable/draw_8sdp_solid_snow_border_quartz"/>

    </LinearLayout>

</LinearLayout>