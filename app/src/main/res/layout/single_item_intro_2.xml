<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_intro_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_32sdp"
    android:paddingRight="@dimen/_32sdp"
    android:paddingBottom="@dimen/_24sdp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@null"
    tools:context=".Views.Activities.IntroActivity"
    tools:ignore="ContentDescription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:src="@drawable/illu_test" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:gravity="center"
        android:text="@string/IntroTitle2"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        android:textColor="@color/Nero"
        android:textAlignment="gravity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:gravity="center"
        android:maxLines="3"
        android:lines="3"
        android:text="@string/IntroDescription2"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

</LinearLayout>