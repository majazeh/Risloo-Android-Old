<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_prerequisite"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_36sdp"
    android:layout_gravity="center"
    tools:ignore="UnusedAttribute, ContentDescription, RtlHardcoded, LabelFor, TextFields">

    <EditText
        android:id="@+id/single_item_prerequisite_type_editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp"
        android:imeOptions="actionDone"
        android:gravity="center|right"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/Grey"
        android:textColorHint="@color/Mischka"
        android:textAlignment="gravity"
        android:importantForAutofill="no"
        android:background="@drawable/draw_16sdp_border_quartz" />

    <Spinner
        android:id="@+id/single_item_prerequisite_option_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:spinnerMode="dropdown"
        android:background="@drawable/draw_16sdp_border_quartz"/>

    <ImageView
        android:id="@+id/single_item_prerequisite_arrow_imageView"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_gravity="center|left"
        android:src="@drawable/ic_chevron_down"
        app:tint="@color/Mischka" />

</FrameLayout>