<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:scrollbarSize="0dp"
    android:overScrollMode="never"
    tools:context=".Views.Fragments.EditPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.majazeh.risloo.Utils.Widgets.CutCopyPasteEditText
            android:id="@+id/edit_password_editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_32sdp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:gravity="center|right"
            android:hint="@string/EditPasswordHint"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:textColor="@color/Gray700"
            android:textColorHint="@color/Gray300"
            android:textAlignment="gravity"
            android:importantForAutofill="no"
            android:background="@drawable/draw_16sdp_border_quartz"
            app:layout_constraintBottom_toTopOf="@+id/edit_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/edit_password_imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:contentDescription="@string/AppImageContent"
            android:padding="@dimen/_6sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_eye_slash_light"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/edit_password_editText"
            app:layout_constraintEnd_toEndOf="@+id/edit_password_editText"
            app:layout_constraintTop_toTopOf="@+id/edit_password_editText"
            app:tint="@color/Gray300" />

        <Button
            android:id="@+id/edit_password_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="center"
            android:text="@string/EditAccountEdit"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textAlignment="gravity"
            android:background="@drawable/draw_16sdp_solid_primary"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_password_editText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>