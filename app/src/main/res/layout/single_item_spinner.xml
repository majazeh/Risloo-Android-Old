<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_1sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:paddingLeft="@dimen/_6sdp"
    android:paddingRight="@dimen/_4sdp"
    android:elevation="@dimen/_1sdp"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:background="@drawable/draw_4sdp_solid_snow">

    <ImageView
        android:id="@+id/single_item_spinner_delete_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:src="@drawable/ic_times"
        app:tint="@color/CoralRed"/>

    <FrameLayout
        android:id="@+id/single_item_spinner_avatar_frameLayout"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginLeft="@dimen/_6sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/single_item_spinner_avatar_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/single_item_spinner_char_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            android:textColor="@color/Grey"
            android:textAlignment="gravity"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_item_spinner_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/_9ssp"
            android:textStyle="bold"
            android:textColor="@color/Grey"
            android:textAlignment="gravity" />

        <TextView
            android:id="@+id/single_item_spinner_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus4sdp"
            android:lineSpacingExtra="@dimen/_minus2sdp"
            android:gravity="right"
            android:textSize="@dimen/_7ssp"
            android:textStyle="normal"
            android:textColor="@color/Mischka"
            android:textAlignment="gravity" />

    </LinearLayout>

</LinearLayout>