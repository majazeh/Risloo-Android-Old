<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_1sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:paddingLeft="@dimen/_6sdp"
    android:paddingRight="@dimen/_4sdp"
    android:elevation="@dimen/_1sdp"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:background="@drawable/draw_4sdp_solid_snow">

    <ImageView
        android:id="@+id/single_item_spinner_delete_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:src="@drawable/ic_times"
        app:tint="@color/VioletRed"/>

    <TextView
        android:id="@+id/single_item_spinner_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

</LinearLayout>