<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_detail_case_samples"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/single_item_detail_case_samples_title_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_case_samples_status_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_case_samples_session_id_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_detail_case_samples_reference_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="top|center">

        <ImageView
            android:id="@+id/single_item_detail_case_samples_link_textView"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:padding="@dimen/_4sdp"
            android:contentDescription="@string/AppImageContent"
            android:src="@drawable/ic_eye_light"
            app:tint="@color/PrimaryDark" />

    </LinearLayout>

</LinearLayout>