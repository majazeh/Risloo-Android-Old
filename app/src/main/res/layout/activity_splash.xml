<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"
    android:background="@color/Primary"
    tools:context=".Views.Ui.SplashActivity"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_splash_logo_imageView"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:tint="@color/White"
            android:src="@drawable/ic_brain" />

        <TextView
            android:id="@+id/activity_splash_loading_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/SplashLoading"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            android:textColor="@color/White"
            android:textAlignment="gravity"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/activity_splash_updating_progressBar"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:alpha="0"
            android:visibility="invisible"
            android:progressDrawable="@drawable/draw_8sdp_primarydark_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <TextView
            android:id="@+id/activity_splash_version_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:textColor="@color/Solitude"
            android:textAlignment="gravity" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>