<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_detail_case_references"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/single_item_detail_case_references_create_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_9sdp"
        android:paddingRight="@dimen/_9sdp"
        android:gravity="center"
        android:text="@string/DetailCaseCreateSample"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        android:textColor="@color/PrimaryDark"
        android:textAlignment="gravity"
        android:background="@drawable/draw_8sdp_solid_snow_border_quartz"/>

    <TextView
        android:id="@+id/single_item_detail_case_references_name_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

</LinearLayout>