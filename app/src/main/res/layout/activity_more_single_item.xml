<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="0dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_more_single_item_root_coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Snow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_24sdp"
            android:paddingBottom="@dimen/_18sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_more_single_item_avatar_imageView"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:tint="@color/PrimaryDark"/>

            <TextView
                android:id="@+id/activity_more_single_item_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/Grey"
                android:textAlignment="gravity"/>

        </LinearLayout>

        <TextView
            android:id="@+id/activity_more_single_item_update_textView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="top|right"
            android:padding="@dimen/_3sdp"
            android:gravity="center|top"
            android:visibility="invisible"
            android:text="!"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textAlignment="gravity"
            android:includeFontPadding="false"
            android:background="@drawable/draw_oval_moonyellow"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.cardview.widget.CardView>