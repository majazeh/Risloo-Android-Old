<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prerequisite_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipToPadding="true"
    app:cardCornerRadius="@dimen/_18sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/activity_prerequisite_single_item_root_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_prerequisite_single_item_title"
            android:layout_width="match_parent"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:textColor="@color/Grey"
            android:textColorHint="@color/Mischka"
            android:textAlignment="gravity"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/activity_prerequisite_single_item_type_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:inputType="text"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal"
            android:textColor="@color/Grey"
            android:textColorHint="@color/Mischka"
            android:textAlignment="gravity"
            android:background="@drawable/draw_18sdp_quartz_border" />

        <Spinner
            android:id="@+id/activity_prerequisite_single_item_option_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:singleLine="true"
            android:spinnerMode="dropdown"
            android:background="@drawable/draw_18sdp_quartz_border"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>