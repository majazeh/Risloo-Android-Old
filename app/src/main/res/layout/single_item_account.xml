<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Views.Activities.AccountActivity"
    tools:ignore="ContentDescription, RtlHardcoded">

    <ImageView
        android:id="@+id/single_item_account_avatar_imageView"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/_16sdp"
        app:tint="@color/Grey" />

    <TextView
        android:id="@+id/single_item_account_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/single_item_account_avatar_imageView"
        android:layout_marginBottom="@dimen/_minus2sdp"
        android:gravity="right"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"
        android:textColor="@color/Mischka"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/single_item_account_subTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/single_item_account_avatar_imageView"
        android:layout_below="@id/single_item_account_title_textView"
        android:layout_marginTop="@dimen/_minus2sdp"
        android:gravity="right"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:textAlignment="gravity" />

</RelativeLayout>