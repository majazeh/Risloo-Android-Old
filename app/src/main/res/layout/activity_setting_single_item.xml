<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting_single_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">

        <ImageView
            android:id="@+id/activity_setting_single_item_avatar_imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_7sdp"
            android:tint="@color/White" />

        <TextView
            android:id="@+id/activity_setting_single_item_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_18sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/activity_setting_single_item_avatar_imageView"
            android:layout_toRightOf="@id/activity_setting_single_item_update_textView"
            android:gravity="right"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/Grey"
            android:textAlignment="gravity"/>

        <TextView
            android:id="@+id/activity_setting_single_item_update_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/SettingNew"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textAlignment="gravity"
            android:visibility="invisible"
            android:background="@drawable/draw_16sdp_primary"/>

    </RelativeLayout>

    <View
        android:id="@+id/activity_setting_single_item_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@color/Solitude" />

</LinearLayout>