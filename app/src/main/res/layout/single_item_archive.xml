<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_archive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_24sdp"
    tools:context=".Views.Activities.ArchiveActivity"
    tools:ignore="UnusedAttribute, RtlHardcoded">

    <FrameLayout
        android:id="@+id/single_item_archive_backGroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_18sdp"
        android:background="@drawable/draw_24sdp_violetred">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:gravity="center"
            android:text="@string/ArchiveDelete"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textAlignment="gravity" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/single_item_archive_foreGroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_12sdp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:background="@drawable/draw_24sdp_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_minus1sdp"
                android:gravity="center"
                android:text="@string/ArchiveSerial"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/single_item_archive_serial_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/Nero"
                android:textAlignment="gravity" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_minus1sdp"
                android:gravity="center"
                android:text="@string/ArchiveStatus"
                android:textSize="@dimen/_8ssp"
                android:textStyle="normal"
                android:textColor="@color/Mischka"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/single_item_archive_status_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_minus1sdp"
                android:gravity="center"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="@color/MoonYellow"
                android:textAlignment="gravity" />

        </LinearLayout>

        <TextView
            android:id="@+id/single_item_archive_continue_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_1sdp"
            android:gravity="center"
            android:text="@string/ArchiveContinue"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textAlignment="gravity"
            android:background="@drawable/draw_18sdp_primary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>