<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="false"
    android:background="@color/White"
    tools:context=".Views.Ui.Activities.IntroActivity"
    tools:ignore="UnusedAttribute">

    <com.duolingo.open.rtlviewpager.RtlViewPager
        android:id="@+id/activity_intro_rtlViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/activity_intro_next_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/_12sdp"
        android:padding="@dimen/_18sdp"
        android:gravity="center"
        android:text="@string/IntroNext"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:textColor="@color/Primary"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/activity_intro_skip_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/_12sdp"
        android:padding="@dimen/_18sdp"
        android:gravity="center"
        android:text="@string/IntroSkip"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:textColor="@color/Mischka"
        android:textAlignment="gravity" />

    <LinearLayout
        android:id="@+id/activity_intro_dots_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/_80sdp"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="bottom"
        android:background="@color/Solitude" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>