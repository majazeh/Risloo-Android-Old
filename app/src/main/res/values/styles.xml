<?xml version="1.0" encoding="utf-8"?>
<resources>

    // app theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>

        <item name="android:fontFamily">@font/dana</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/Primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="WindowTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // toolbar theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/dana</item>
        <item name="colorControlHighlight">@color/Quartz</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Nero</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // navigationView theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="NavigationViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/dana</item>
        <item name="colorControlHighlight">@color/Quartz</item>

        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:listDivider">@null</item>
        <item name="android:textColorSecondary">@color/Mischka</item>
    </style>

    <style name="NavigationTextAppearance" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // progressBar theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/Primary</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // datePicker theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/Quartz</item>

        <item name="android:dateTextAppearance">@font/dana</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/Grey</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // tab theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="TabTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/dana</item>
    </style>

    <style name="TabTextNormalAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabTextBoldAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // dialog theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // bottomSheetDialog theme
    ////////////////////////////////////////////////////////////////////////////////

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
    </style>

    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/draw_16sdp_top_white</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

    // activity animation
    ////////////////////////////////////////////////////////////////////////////////

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    ////////////////////////////////////////////////////////////////////////////////

</resources>